<Window x:Class="LoginSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="167.242" Width="227.402">
    <Grid>
        <TextBox x:Name="TxtUsername" HorizontalAlignment="Left" Height="23" Margin="90,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="90,42,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
        <Label x:Name="label" Content="Username" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" Width="75" Height="23"/>
        <Label x:Name="label_Copy" Content="Password" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="75" Height="23"/>
        <Button x:Name="BtnLogin" Content="Login" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="200" Click="BtnLogin_Click"/>
        <Button x:Name="BtnRegister" Content="register" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Width="200" Click="BtnRegister_Click"/>

    </Grid>
</Window>
